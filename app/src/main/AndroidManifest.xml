<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸŒ Izin untuk koneksi ke internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NesaFood"
        android:usesCleartextTraffic="true">

        <service
            android:name=".MyFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


        <!-- ðŸ›’ Halaman utama untuk PEMBELI -->
        <activity
            android:name=".UtamaActivity"
            android:exported="false" />

        <!-- ðŸ’¼ Halaman utama untuk PENJUAL -->
        <activity
            android:name=".PenjualActivity"
            android:exported="true" />
        <activity android:name=".ProfilActivity" />
        <activity android:name=".StatusPemesananActivity" />
        <activity android:name=".Tambah_Menu_Penjual"
            android:exported="false" />
        <activity android:name=".UbahMenuActivity" />
        <activity android:name=".ManageMenuActivity" />
        <activity android:name=".MenuDalam"
            android:exported="false" />
        <activity android:name=".CartActivity"
            android:exported="false" />
        <activity android:name=".PaymentActivity" />
        <!-- AndroidManifest.xml -->
        <!-- Deep link handler -->
        <activity
            android:name=".DeepLinkActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- skema deep-link: nesafood://pay/finish?... -->
                <data
                    android:scheme="nesafood"
                    android:host="pay"
                    android:path="/finish" />
            </intent-filter>
        </activity>

        <activity android:name=".StatusActivity" />
        <activity
            android:name=".StatusListActivity"
            android:exported="false"
            android:label="Status Pesanan"
            android:theme="@style/Theme.NesaFood" />
  

        <!-- ðŸ“ Halaman register -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- ðŸ” Halaman login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.NesaFood" />

        <!-- ðŸ‘¥ Halaman awal (user memilih Pembeli / Penjual) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RiwayatPesananActivity"
            android:exported="false"
            android:label="Riwayat Pesanan" />

        <!-- ðŸ”¹ Halaman Riwayat Penjual -->
        <activity
            android:name=".RiwayatPenjualActivity"
            android:exported="false"
            android:label="Riwayat Penjualan" />
        <!-- ðŸ‘¥ Halaman awal setelah splash -->
        <activity
            android:name=".UserActivity"
            android:exported="true"
            android:theme="@style/Theme.NesaFood" />

        <!-- ðŸŸ¡ MainActivity (tidak digunakan lagi) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>
